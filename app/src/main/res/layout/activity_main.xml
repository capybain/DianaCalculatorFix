<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_dark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_expression"
        style="@style/style_text_expression"
        />
    <TextView
        android:id="@+id/text_result"
        style="@style/style_text_result"
        />

    <LinearLayout
        style="@style/row">
        <TextView
            android:id="@+id/btn_ac"
            style="@style/column"
            android:text="AC"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_open_par"
            style="@style/column"
            android:text="("
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_close_par"
            style="@style/column"
            android:text=")"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_division"
            style="@style/column"
            android:text="/"
            android:layout_width="match_parent" />

    </LinearLayout>


    <LinearLayout
        style="@style/row">
        <TextView
            android:id="@+id/btn_7"
            style="@style/column"
            android:text="7"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_8"
            style="@style/column"
            android:text="8"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_9"
            style="@style/column"
            android:text="9"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_multiplication"
            style="@style/column"
            android:text="*"
            android:layout_width="match_parent" />
    </LinearLayout>

    <LinearLayout
        style="@style/row">
        <TextView
            android:id="@+id/btn_4"
            style="@style/column"
            android:text="4"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_5"
            style="@style/column"
            android:text="5"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_6"
            style="@style/column"
            android:text="6"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_subtraction"
            style="@style/column"
            android:text="-"
            android:layout_width="match_parent" />
    </LinearLayout>

    <LinearLayout
        style="@style/row">
        <TextView
            android:id="@+id/btn_1"
            style="@style/column"
            android:text="1"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_2"
            style="@style/column"
            android:text="2"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_3"
            style="@style/column"
            android:text="3"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_addition"
            style="@style/column"
            android:text="+"
            android:layout_width="match_parent" />
    </LinearLayout>

    <LinearLayout
        style="@style/row">
        <TextView
            android:id="@+id/btn_back"
            style="@style/column"
            android:text="bck"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_0"
            style="@style/column"
            android:text="0"
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_coma"
            style="@style/column"
            android:text=","
            android:layout_width="match_parent" />
        <TextView
            android:id="@+id/btn_equal"
            style="@style/column"
            android:text="="
            android:layout_width="match_parent" />
    </LinearLayout>

</LinearLayout>